<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_select_item_top_book"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:background="@drawable/background_item_list_top_book"
    app:cardCornerRadius="10dp">

    <ImageView
        android:id="@+id/imgView_item_imgTopBook"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        android:src="@drawable/img_top_book"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_item_nameTopBook"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:textAlignment="center"
        android:background="@color/Cam"
        android:fontFamily="@font/roboto_bold"
        android:text="Đấu phá thương khung 3"
        android:maxLength="20"
        android:ellipsize="end"
        android:textColor="#FFFFFF"
        android:textSize="11sp" />
</androidx.cardview.widget.CardView>