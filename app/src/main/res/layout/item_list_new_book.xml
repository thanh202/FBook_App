<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/rl_item_select"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="20dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/shadow">

    <LinearLayout
        android:layout_marginRight="1dp"
        android:layout_marginBottom="1dp"
        android:background="@drawable/background_item_list_new_book"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp">

            <ImageView
                android:id="@+id/imgView_item_imgNewBook"
                android:layout_width="138dp"
                android:layout_height="136dp"
                android:scaleType="centerCrop"
                android:src="@drawable/img_book" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@id/card"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_item_nameNewBook"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:text="Đấu phá thương khung 5"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_item_descriptionNewBook"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bộ kể về quá trình Tiêu Viêm thôn phệ.."
                android:textColor="#4C4C4C"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="10sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đánh giá:"
                    android:textColor="#9A9A9A"
                    android:textSize="12sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/frame_danh_gia" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_item_priceNewBook"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="50.000 vnđ"
                android:textColor="#E50000"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Xem Thêm:"
                android:textColor="#9A9A9A"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|end"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/btn_item_like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_like" />

                <ImageView
                    android:id="@+id/btn_item_buy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/icon_cart1" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>