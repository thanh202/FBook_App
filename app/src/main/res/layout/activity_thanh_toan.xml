<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".HomeActivity.ThanhToanActivity">

    <ImageView
        android:layout_margin="10dp"
        android:id="@+id/btn_back_thanhtoan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_back_1" />

    <TextView
        android:id="@+id/textView_thanhtoan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:text="Thanh Toán"
        android:textColor="@color/Cam"
        android:textSize="30dp"
        android:textStyle="bold" />
    <androidx.cardview.widget.CardView
        android:id="@+id/card1_thanhtoan"
        android:layout_below="@+id/textView_thanhtoan"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp"
        android:backgroundTint="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:background="@color/white"
            android:padding="5dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hóa Đơn Thanh Toán"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"/>
            <LinearLayout
                android:background="@color/white"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Trạng Thái"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:textColor="@color/black"/>
                <View
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_gravity="bottom"
                    android:layout_width="130dp"
                    android:layout_height="1dp"
                    android:background="@color/xam"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đang Tiến Hành"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:textColor="@color/black"/>
            </LinearLayout>

            <LinearLayout
                android:background="@color/white"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tên Sách"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:textColor="@color/black"/>
                <View
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_gravity="bottom"
                    android:layout_width="150dp"
                    android:layout_height="1dp"
                    android:background="@color/xam"/>
                <TextView
                    android:id="@+id/nameBook_thanhtoan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đắc Nhân Tâm"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:textColor="@color/black"/>

            </LinearLayout>

            <LinearLayout
                android:background="@color/white"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Số Tiền Thanh Toán"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:textColor="@color/black"/>
                <View
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_gravity="bottom"
                    android:layout_width="100dp"
                    android:layout_height="1dp"
                    android:background="@color/xam"/>
                <TextView
                    android:id="@+id/priceBook_thanhtoan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="500.000 VNĐ"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:textColor="@color/black"/>

            </LinearLayout>
            <LinearLayout
                android:background="@color/white"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ngày"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:textColor="@color/black"/>
                <View
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_gravity="bottom"
                    android:layout_width="200dp"
                    android:layout_height="1dp"
                    android:background="@color/xam"/>
                <TextView
                    android:id="@+id/date_thanhtoan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="13-12-2023"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:textColor="@color/black"/>

            </LinearLayout>
            <LinearLayout
                android:background="@color/white"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thời Gian"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:textColor="@color/black"/>
                <View
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_gravity="bottom"
                    android:layout_width="200dp"
                    android:layout_height="1dp"
                    android:background="@color/xam"/>
                <TextView
                    android:id="@+id/time_thanhtoan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10:12"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:textColor="@color/black"/>

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card2_thanhtoan"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/card3_thanhtoan"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="10dp">
        <LinearLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phương Thức Thành Toán"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="15dp"/>
            <com.jaredrummler.materialspinner.MaterialSpinner
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spiner"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card3_thanhtoan"
        android:layout_alignParentBottom="true"
        android:backgroundTint="@color/Cam"
        app:cardCornerRadius="10dp"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_gravity="center"
            android:layout_margin="1dp"
            app:cardCornerRadius="10dp"
            android:backgroundTint="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mua"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textColor="@color/Cam"
                android:layout_gravity="center"/>
        </androidx.cardview.widget.CardView>
    </androidx.cardview.widget.CardView>

</RelativeLayout>