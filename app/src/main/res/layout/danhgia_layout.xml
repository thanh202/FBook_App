<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:backgroundTint="@color/white"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="Gửi Đánh Giá"
            android:textColor="@color/Cam"
            android:textSize="20dp"
            android:textStyle="bold" />

        <RatingBar
            android:id="@+id/rating_bar_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv1"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:progressTint="@color/Cam"
            android:rating="4"
            android:secondaryProgressTint="@color/white" />

        <EditText
            android:id="@+id/comment_up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rating_bar_up"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/background_edit_text"
            android:hint="Hãy viết đánh giá của bạn ..."
            android:padding="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/xam"
            android:textSize="15dp" />

        <LinearLayout
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/comment_up"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/btn_Huy"
                app:cardCornerRadius="5dp"
                android:backgroundTint="@color/Cam"
                android:layout_width="50dp"
                android:layout_height="30dp">

                <androidx.cardview.widget.CardView
                    android:layout_margin="1dp"
                    app:cardCornerRadius="5dp"
                    android:backgroundTint="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hủy"
                        android:textColor="@color/Cam"
                        android:textSize="17dp"
                        android:textStyle="bold" />
                </androidx.cardview.widget.CardView>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/btn_Gui"
                android:layout_marginLeft="10dp"
                app:cardCornerRadius="5dp"
                android:backgroundTint="@color/Cam"
                android:layout_width="50dp"
                android:layout_height="30dp">

                <androidx.cardview.widget.CardView
                    android:layout_margin="1dp"
                    app:cardCornerRadius="5dp"
                    android:backgroundTint="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gửi"
                        android:textColor="@color/Cam"
                        android:textSize="17dp"
                        android:textStyle="bold" />
                </androidx.cardview.widget.CardView>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>