<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_select_item_favorite_book"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/background_item_list_new_book">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp">

            <ImageView
                android:id="@+id/imgView_item_imgBook"
                android:layout_width="145dp"
                android:layout_height="194dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/img_book" />
        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/tv_item_nameBook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đấu phá thương khung P5 Già nam học viện nơi....."
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:textSize="13sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginVertical="5dp">
        <TextView
            android:id="@+id/btn_docNgay"
            android:background="@drawable/bg_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="5dp"
            android:paddingVertical="2dp"
            android:textAlignment="center"
            android:text="Đọc ngay"
            android:textColor="@color/white"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/btn_danhGia"
            android:background="@drawable/bg_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:paddingHorizontal="5dp"
            android:paddingVertical="2dp"
            android:text="Đánh giá "
            android:textColor="@color/white"
            android:layout_marginLeft="5dp"
            android:textSize="14sp" />
    </LinearLayout>
    </LinearLayout>
</LinearLayout>