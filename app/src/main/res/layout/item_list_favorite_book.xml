<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_select_item_favorite_book"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/background_item_list_new_book">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp">

            <ImageView
                android:id="@+id/imgView_item_imgBook"
                android:layout_width="145dp"
                android:layout_height="194dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/img_book" />
        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/tv_item_nameBook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đấu phá thương khung P5 Già nam học viện nơi....."
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/tv_item_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Già nam học viện nơi....."
            android:textAlignment="textStart"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="#686868"
            android:textSize="11sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@drawable/frame_danh_gia" />

            <TextView
                android:id="@+id/tv_item_priceBook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:text="50.000vnđ"
                android:textColor="#FF0000"
                android:textSize="10sp"
                tools:ignore="SmallSp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btn_un_favorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_like" />

            <ImageView
                android:id="@+id/btn_item_favorite_buy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_cart1" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>